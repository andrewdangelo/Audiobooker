# Production Environment Configuration Template
# Copy this file to .env.production and update with actual production values

# ============================================================
# APPLICATION SETTINGS
# ============================================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
API_V1_PREFIX=/api/v1

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# Production PostgreSQL connection
# Update with your production database credentials
DATABASE_URL=postgresql://user:password@db-host:5432/audiobooker_db

# Connection Pool Settings (for production)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================================
# CLOUDFLARE R2 STORAGE
# ============================================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=audiobooker-production
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com

# Optional: Custom domain for R2 public access
# R2_PUBLIC_URL=https://files.yourdomain.com

# ============================================================
# CORS SETTINGS
# ============================================================
# Production frontend URLs (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================
# FILE UPLOAD SETTINGS
# ============================================================
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=.pdf
UPLOAD_TIMEOUT=300  # 5 minutes

# ============================================================
# TEXT-TO-SPEECH CONFIGURATION
# ============================================================
TTS_PROVIDER=openai
TTS_API_KEY=your_openai_api_key_here
TTS_MODEL=tts-1-hd
TTS_VOICE=alloy
TTS_SPEED=1.0

# ============================================================
# REDIS (for task queue and caching)
# ============================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/audiobooker/app.log

# ============================================================
# SECURITY
# ============================================================
# Enable HTTPS redirect in production
FORCE_HTTPS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# JWT Authentication (if implementing user auth)
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================
# MONITORING & OBSERVABILITY
# ============================================================
# Sentry for error tracking (optional)
SENTRY_DSN=

# Application Insights (optional)
APPINSIGHTS_INSTRUMENTATION_KEY=

# ============================================================
# PERFORMANCE
# ============================================================
# Worker processes for production
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_TIMEOUT=120

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_SWAGGER_DOCS=false  # Disable in production
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
