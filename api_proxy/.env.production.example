# Environment
ENVIRONMENT=production
DEBUG=false
PORT=${PORT}

# CORS Settings - UPDATE WITH YOUR PRODUCTION FRONTEND URLS
CORS_ORIGINS=https://your-frontend.railway.app,https://your-domain.com

# Microservice URLs - UPDATE WITH YOUR PRODUCTION SERVICE URLS
PDF_PROCESSOR_URL=https://pdf-processor.railway.app
TTS_SERVICE_URL=https://tts-service.railway.app
BACKEND_SERVICE_URL=https://backend-service.railway.app
STORAGE_SERVICE_URL=https://storage-service.railway.app

# Timeouts (seconds)
REQUEST_TIMEOUT=60
UPLOAD_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
