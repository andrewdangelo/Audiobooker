# Auth Microservice Environment Variables

# Environment
ENVIRONMENT=development
PORT=8003
LOG_LEVEL=INFO
DEBUG=true
TEST_VERSION=1.0.0

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=audiobooker_auth
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth Configuration (leave empty if not using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# CORS Origins - includes frontend dev server (5173), API proxy (8009)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8009"]

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SENDER_EMAIL=noreply@audiobooker.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
