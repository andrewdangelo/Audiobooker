# Payment Service Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
PORT=8004
LOG_LEVEL=INFO
DEBUG=true
TEST_VERSION=1.0.0

# MongoDB - Payment Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=audiobooker_payment
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# MongoDB - Auth Database (for user lookups)
AUTH_MONGODB_URL=mongodb://localhost:27017
AUTH_MONGODB_DB_NAME=audiobooker_auth

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# 
# For DEVELOPMENT/SANDBOX mode:
#   - Use test keys from Stripe Dashboard > Developers > API keys
#   - Test keys start with sk_test_ and pk_test_
#   - Use test card numbers: 4242424242424242 (success), 4000000000000002 (decline)
#
# For PRODUCTION mode:
#   - Use live keys (sk_live_, pk_live_)
#   - NEVER commit live keys to version control!
#
# Get your keys at: https://dashboard.stripe.com/test/apikeys
# =============================================================================

# Stripe API Keys (use test keys for development)
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here

# Stripe Webhook Secret
# Get this from: Stripe Dashboard > Developers > Webhooks > Add endpoint
# For local development, use Stripe CLI: stripe listen --forward-to localhost:8004/api/v1/payment/webhook/stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Settings
STRIPE_API_VERSION=2023-10-16
STRIPE_CURRENCY=usd

# Payment Redirect URLs (frontend URLs)
PAYMENT_SUCCESS_URL=http://localhost:5173/checkout/success
PAYMENT_CANCEL_URL=http://localhost:5173/checkout/cancel

# =============================================================================
# CORS Origins
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8000"]

# =============================================================================
# JWT Configuration (for validating auth tokens)
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256

# Auth Service URL
AUTH_SERVICE_URL=http://localhost:8003/api/v1/auth

# Redis (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
